<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fjhidalgo.restaurante">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera" />

    <application
        android:name=".core.app.view.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/Theme.Restaurante">

        <activity android:name=".module.splash.view.SplashActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".module.menu.add_product.view.AddProductActivity" android:screenOrientation="portrait"/>
        <activity android:name=".module.menu.delete_product.view.DeleteProductActivity" android:screenOrientation="portrait"/>
        <activity android:name=".module.menu.update_product.view.UpdateProductActivity" android:screenOrientation="portrait"/>
        <activity android:name=".module.login.view.LoginActivity" android:screenOrientation="portrait"/>
        <activity android:name=".module.signup.view.SignupActivity" android:screenOrientation="portrait"/>
        <activity android:name=".module.main.activity.view.MainActivity" android:screenOrientation="portrait"/>
        <activity android:name=".module.menu.users.view.UsersActivity" android:screenOrientation="portrait"/>
        <activity android:name=".module.recorved_password.view.RecorvedPassActivity" android:screenOrientation="portrait"/>
        <activity android:name=".module.bill_activity.view.BillActivity" android:screenOrientation="portrait"/>
    </application>

    <queries>
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </intent>
    </queries>

</manifest>